{
  "compilerOptions": {
    "module": "CommonJS",    // Usar o padrão CommonJS
    "target": "ESNext",      // Ou qualquer versão mais recente que você preferir
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],    // Inclui os arquivos de origem
  "exclude": ["node_modules"] // Exclui a pasta node_modules
}
